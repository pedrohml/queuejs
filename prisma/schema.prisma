datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Message {
  id Int @id @default(autoincrement())
  topic String
  data String
  offset Int
}

model Consumer {
  id Int @id @default(autoincrement())
  group String
  topic String
  offset Int
}
